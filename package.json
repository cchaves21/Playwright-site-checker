{
  "name": "playwright-site-checker",
  "version": "1.0.0",
  "description": "Playwright project to check if all pages and links on a website are working.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:quick": "playwright test --project=quick-tests",
    "test:crawl": "playwright test --project=full-crawl",
    "test:headed": "playwright test --headed",
    "test:headed:quick": "playwright test --project=quick-tests --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "install:browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "link-checker",
    "e2e-testing",
    "qa",
    "portfolio"
  ],
  "author": "Carlos Chaves",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1"
  }
}